      document.getElementById("peep").disabled = false;
      if (phrase.length == 0) {
      document.getElementById("peep").disabled = true;
      };
      if (phrase.length >= 120) {
      $("#charsleft").addClass("text-danger");
      } else {
      $("#charsleft").removeClass("text-danger");
      };
